            color: #00FFFF;
            padding: 10px;
            margin: 10px 0;
            font-weight: bold;
        }

        .button {
            display: inline-block;
            background-color: #00FFFF;
            color: #FF1493;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 20px;
            font-weight: bold;
            transition: all 0.3s;

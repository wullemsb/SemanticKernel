            .button:hover {
                background-color: #FF1493;
                color: #00FFFF;
                transform: scale(1.1);
            }

        .under-construction {
            text-align: center;
            font-size: 2em;
            color: #FFD700;
            margin: 20px 0;
        }

        .gif-container {
            display: flex;
            justify-content: center;
